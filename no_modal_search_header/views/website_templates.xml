<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="no_modal_search_header_1"
        inherit_id="website.template_header_default"
        name="Custom Template Header Default"
        active="True"
    >
        <xpath expr="//t[@t-set='_layout']" position="after">
            <t t-set="_layout" t-valuef="no_modal" />
        </xpath>
    </template>

    <template
        id="no_modal_search_header_2"
        inherit_id="website.template_header_vertical"
